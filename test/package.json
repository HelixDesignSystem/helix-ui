{
  "dependencies": {
    "@types/lodash": "^4.14.74",
    "@types/node": "^8.0.28",
    "@types/opn": "^3.0.28",
    "@types/reflect-metadata": "^0.0.5",
    "@types/selenium-webdriver": "^3.0.7",
    "ava": "^0.23.0",
    "inquirer-promise": "^1.0.0",
    "inquirer-shortcuts": "^1.1.0",
    "lodash": "^4.17.4",
    "opn": "^5.1.0",
    "selenium-webdriver": "^3.5.0",
    "snappit-visual-regression": "^0.6.4",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "scripts": {
    "build": "tsc",
    "clean": "npm run clean:visreg && npm run clean:func",
    "clean:func": "scripts/deleteEverythingButSnapshots.sh functional",
    "clean:regression": "scripts/deleteEverythingButSnapshots.sh regression",
    "clean:visreg": "rm -rf visreg/screenshots built/visreg",
    "lint": "tslint -c tslint.json visreg/ functional/",
    "pretest": "npm run build",
    "test": "npm run test:func && npm run test:regression && npm run test:visreg",
    "test:func": "ava built/functional/*.js",
    "test:regression": "ava node built/regression/generateRegressionTests.js --verbose --serial",
    "test:visreg": "ava built/visreg/{chrome,firefox}.js --verbose --serial",
    "postinstall": "[ -f bin/visreg.config.ts ] || cp bin/visreg.example.config.ts bin/visreg.config.ts",
    "previsreg": "npm run clean:visreg",
    "visreg": "node built/bin/util.js && node built/bin/visreg.js",
    "webdriver": "npm run webdriver:update && npm run webdriver:start",
    "webdriver:start": "scripts/webdriver-start",
    "webdriver:update": "scripts/webdriver-update"
  },
  "ava": {
    "snapshotLocation": "test/snapshots",
    "failWithoutAssertions": false
  }
}
