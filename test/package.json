{
  "dependencies": {
    "@types/lodash": "^4.14.74",
    "@types/node": "^8.0.28",
    "@types/opn": "^3.0.28",
    "@types/reflect-metadata": "^0.0.5",
    "@types/selenium-webdriver": "^3.0.7",
    "ava": "^0.23.0",
    "fs-extra": "^6.0.1",
    "inquirer-promise": "^1.0.0",
    "inquirer-shortcuts": "^1.1.0",
    "lodash": "^4.17.4",
    "opn": "^5.1.0",
    "snappit-visual-regression": "^0.11.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "scripts": {
    "build": "tsc",
    "clean": "npm run clean:regression && npm run clean:built",
    "clean:built": "rm -rf built",
    "clean:regression": "npm run clean:regression:autoGeneratedTs && npm run clean:built",
    "clean:regression:autoGeneratedTs": "rm -f dom-snapshots/*.ts",
    "lint": "tslint -c tslint.json behavioral/ regression/ common/",
    "pretest": "npm run build",
    "test": "scripts/run-travis-push-or-pr",
    "test:behavioral": "ava built/behavioral/{chrome,firefox}.js --verbose --serial",
    "test:regression": "scripts/regressionTest.sh",
    "webdriver": "npm run webdriver:update && npm run webdriver:start",
    "webdriver:start": "scripts/webdriver-start",
    "webdriver:update": "scripts/webdriver-update"
  },
  "ava": {
    "failWithoutAssertions": false,
    "failFast": true
  }
}
