{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "$": false,
        "module": false,
        "require": false,
        "ShadyCSS": false
    },
    "rules": {
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "camelcase": [2, { "properties": "never" }],
        "comma-style": [2, "last"],
        "complexity": [2, 10],
        "curly": [2, "all"],
        "eol-last": 2,
        "eqeqeq": 2,
        "guard-for-in": 2,
        "indent": [2, 4, { "SwitchCase": 1 }],
        "key-spacing": [2, {
            "beforeColon": false,
            "afterColon": true
        }],
        "keyword-spacing": [2],
        "max-depth": [2, 3],
        "max-len": [2, 120, { "ignoreUrls": true }],
        "new-cap": 0,
        "no-bitwise": 2,
        "no-caller": 2,
        "no-empty": 2,
        "no-extra-boolean-cast": 0,
        "no-multiple-empty-lines": [2, { "max": 2 }],
        "no-undef": 2,
        "no-unused-expressions": [2, { "allowTernary": true, "allowShortCircuit": true }],
        "no-unused-vars": 2,
        "no-use-before-define": [2, { "functions": false }],
        "object-curly-spacing": [2, "always", {
            "objectsInObjects": false,
            "arraysInObjects": true
        }],
        "quotes": [2, "single"],
        "space-before-function-paren": [2, "always"],
        "space-in-parens": [2, "never"],
        "space-infix-ops": 2,
        "space-unary-ops": [2],
        "strict": 0,
        "wrap-iife": [2, "inside"]
    }
}
